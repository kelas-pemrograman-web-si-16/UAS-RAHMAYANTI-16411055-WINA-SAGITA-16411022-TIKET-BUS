include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Tiket
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Pemesanan Tiket
                            // /.box-header
                            // form start
                            form.form-horizontal(method="post", action="/inputpesan", role='form')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='kode_pesan') Kode pemesanan
                                        .col-sm-10
                                            input#kode_pesan.form-control(type='text' required name="kode_pesan" placeholder='Kode Pemesanan')
                                    .form-group
                                        label.col-sm-2.control-label(for='asal') Asal
                                        .col-sm-10
                                            input#asal.form-control(type='text' required name="asal" placeholder='Asal')
                                    .form-group
                                        label.col-sm-2.control-label(for='tujuan') Tujuan
                                        .col-sm-10
                                            input#tujuan.form-control(type='text' required name="tujuan" placeholder='Tujuan')
                                    .form-group
                                        label.col-sm-2.control-label(for='tanggal_berangkat') Tanggal Berangkat
                                        .col-sm-10
                                            input#tanggal_berangkat.form-control(type='date' required name="tanggal_berangkat" placeholder='Tanggal Berangkat')
                                    .form-group
                                        label.col-sm-2.control-label(for='kursi') Jumlah Kursi
                                        .col-sm-10
                                            input#kursi.form-control(type='text' required name="kursi" placeholder='Jumlah Kursi')




                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Pesan


